# .env - Environment variables for Docker deployment

# ==============================
# SERVER CONFIGURATION
# ==============================

# Domain for your server (REQUIRED - CHANGE THIS!)
EXPOSEME_DOMAIN=exposeme.yourdomain.com

# Email for Let's Encrypt (REQUIRED - CHANGE THIS!)
EXPOSEME_EMAIL=admin@yourdomain.com

# Use Let's Encrypt staging (true for testing, false for production)
EXPOSEME_STAGING=true

# Logging level
RUST_LOG=info

# ==============================
# DOCKER CONFIGURATION
# ==============================

# Image versions (can pin to specific version)
EXPOSEME_SERVER_VERSION=latest
EXPOSEME_CLIENT_VERSION=latest

# Docker Hub username (change to yours)
DOCKER_HUB_USER=arch7tect